<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>IoT Dashboard</title>

  <link rel="stylesheet" href="/style.css" />
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" rel="stylesheet">
</head>
<body>
  <div class="dashboard">
    <header>
      <p>Welcome Home</p>
    </header>

    <div class="container">

      <!-- Time Card -->
      <div class="card time-card">
        <div class="time-section">
          <h2 id="time">--:--</h2>
          <p id="date">--/--/----</p>
        </div>

        <!-- Nested Temperature (inside Time Card) -->
        <div class="nested-temp">
          <img src="/images/Temperature.jpeg" alt="Temperature Icon" class="temp-icon">
          <span id="nested-temp-value">--°C</span>
        </div>
      </div>

      <!-- Air Quality Card -->
      <div class="card airquality">
        <img src="/images/air.jpeg" class="card-img" alt="Air Quality">
        <h2>Air Quality</h2>
        <div class="air-display">
          <span id="air-value">0 AQI</span>
        </div>
      </div>

      <!-- Power Usage Chart -->
      <div class="card power">
        <img src="/images/power.jpeg" class="card-img" alt="Power Usage">
        <h2>Power Usage</h2>
        <div class="chart-container">
          <canvas id="powerChart"></canvas>
        </div>
      </div>

      <!-- Humidity -->
      <div class="card humidity">
        <img src="/images/humidity.jpeg" class="card-img" alt="Humidity">
        <h2>Humidity</h2>
        <div class="humidity-display">
          <span id="humidity">48%</span>
        </div>
      </div>

      <!-- Separate Temperature Card -->
      <div class="card temperature-card">
        <img src="/images/Temperature.jpeg" class="card-img" alt="Temperature">
        <h2>Temperature</h2>
        <div class="temp-display">
          <span id="temp-value">--°C</span>
        </div>
      </div>

    </div>
  </div>

  <script src="/script.js"></script>
</body>
</html>
